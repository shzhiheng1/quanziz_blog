{
	"bsonType": "object",
	"required": [
		"blog_id",
		"user_id"
	],
	"permission": {
		"read": true,
		"create": "auth.uid != null",
		"update": "doc.user_id == auth.uid",
		"delete": "doc.user_id == auth.uid"
	},
	"properties": {
		"_id": {
			"description": "存储文档 ID（文章 ID），系统自动生成"
		},
		"blog_id": {
			"bsonType": "string",
			"description": "文章ID，opendb-news-posts 表中的`_id`字段",
			"foreignKey": "blogs._id"
		},
		"user_id": {
			"bsonType": "string",
			"description": "评论者ID，参考`uni-id-users` 表",
			"forceDefaultValue": {
				"$env": "uid"
			},
			"foreignKey": "uni-id-users._id"
		},
		"like_date": {
			"bsonType": "timestamp",
			"description": "点赞时间",
			"forceDefaultValue": {
				"$env": "now"
			}
		},
		"like_ip": {
			"bsonType": "string",
			"description": "点赞时 IP 地址",
			"forceDefaultValue": {
				"$env": "clientIP"
			}
		}
	},
	"version": "0.0.1"
}